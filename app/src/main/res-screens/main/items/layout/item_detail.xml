<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/dp16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_article_tv_header"
            style="@style/TextListRowContentMedium.Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dm_frg_main_item_article_title"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_article_tv_content"
            style="@style/TextListRowContentMedium.Content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/dm_frg_main_item_article_description"
            card_view:layout_constraintTop_toBottomOf="@+id/item_article_tv_header"
            card_view:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>